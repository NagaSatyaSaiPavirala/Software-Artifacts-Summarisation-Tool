      "cell_type": "code",
      "source": [
        "# Import required modules\n",
        "import os\n",
        "import google.generativeai as genai\n",
        "import requests\n",
        "from urllib.parse import urlparse\n",
        "from transformers import pipeline\n",
        "import git\n",
        "import shutil"
      ],
      "metadata": {
        "id": "w0DylGSlI2v1"
